{
    "ci": {
        "collect": {
            "url": [
                "http://localhost:3000/"
            ],
            "numberOfRuns": 3,
            "settings": {
                "chromeFlags": "--no-sandbox --headless --disable-gpu"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.85
                    }
                ],
                "categories:accessibility": [
                    "warn",
                    {
                        "minScore": 0.90
                    }
                ],
                "categories:best-practices": [
                    "warn",
                    {
                        "minScore": 0.90
                    }
                ],
                "categories:seo": [
                    "warn",
                    {
                        "minScore": 0.80
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}