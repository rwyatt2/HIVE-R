{
    "__inputs": [
        {
            "name": "DS_PROMETHEUS",
            "label": "Prometheus",
            "description": "",
            "type": "datasource",
            "pluginId": "prometheus",
            "pluginName": "Prometheus"
        }
    ],
    "annotations": {
        "list": []
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "id": null,
    "links": [],
    "panels": [
        {
            "title": "Request Rate (req/s)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_http_requests_total[5m])) by (method, path)",
                    "legendFormat": "{{method}} {{path}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps",
                    "custom": {
                        "fillOpacity": 10
                    }
                }
            }
        },
        {
            "title": "Error Rate (%)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(hive_http_requests_total[5m])) * 100",
                    "legendFormat": "Error %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "custom": {
                        "fillOpacity": 10
                    },
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 1
                            },
                            {
                                "color": "red",
                                "value": 5
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Response Latency (p50 / p95 / p99)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.50, sum(rate(hive_http_request_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "p50"
                },
                {
                    "expr": "histogram_quantile(0.95, sum(rate(hive_http_request_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "p95"
                },
                {
                    "expr": "histogram_quantile(0.99, sum(rate(hive_http_request_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "p99"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "custom": {
                        "fillOpacity": 5
                    }
                }
            }
        },
        {
            "title": "Agent Invocations (rate/5m)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_agent_invocations_total[5m])) by (agent)",
                    "legendFormat": "{{agent}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ops",
                    "custom": {
                        "fillOpacity": 10
                    }
                }
            }
        },
        {
            "title": "Token Usage (rate/5m)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_token_usage_total[5m])) by (model, direction)",
                    "legendFormat": "{{model}} {{direction}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "custom": {
                        "fillOpacity": 10
                    }
                }
            }
        },
        {
            "title": "Daily Cost ($)",
            "type": "stat",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "hive_cost_dollars",
                    "legendFormat": "Daily Spend"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "currencyUSD",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 40
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Circuit Breaker State",
            "type": "state-timeline",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 18,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "targets": [
                {
                    "expr": "hive_circuit_breaker_state",
                    "legendFormat": "{{model}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "mappings": [
                        {
                            "type": "value",
                            "options": {
                                "0": {
                                    "text": "CLOSED",
                                    "color": "green"
                                }
                            }
                        },
                        {
                            "type": "value",
                            "options": {
                                "0.5": {
                                    "text": "HALF_OPEN",
                                    "color": "yellow"
                                }
                            }
                        },
                        {
                            "type": "value",
                            "options": {
                                "1": {
                                    "text": "OPEN",
                                    "color": "red"
                                }
                            }
                        }
                    ]
                }
            }
        }
    ],
    "schemaVersion": 39,
    "tags": [
        "hive-r",
        "observability"
    ],
    "templating": {
        "list": []
    },
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "title": "HIVE-R Operations Dashboard",
    "uid": "hive-r-ops",
    "version": 1
}