                    ],
                    "displayMode": "table",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "single"
                }
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_llm_call_cost_dollars_total[$__rate_interval])) * 3600",
                    "legendFormat": "$/hour",
                    "refId": "A"
                }
