                            },
                            {
                                "color": "yellow",
                                "value": 20
                            },
                            {
                                "color": "orange",
                                "value": 35
                            },
                            {
                                "color": "red",
                                "value": 50
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                },
                "colorMode": "background",
                "graphMode": "area",
                "justifyMode": "auto",
                "textMode": "auto"
            },
            "targets": [
                {
                    "expr": "hive_cost_dollars",
                    "legendFormat": "Daily Spend",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 10,
            "title": "Node.js Memory",
            "description": "Heap and RSS memory usage",
            "type": "timeseries",
            "gridPos": {
                "h": 6,
                "w": 8,
                "x": 0,
                "y": 16
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes",
                    "custom": {
                        "drawStyle": "line",
