            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 4,
                "x": 16,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "fixedColor": "#FF9830",
                        "mode": "fixed"
                    },
                    "custom": {
                        "axisBorderShow": false,
                        "axisLabel": "$/hr",
                        "drawStyle": "line",
                        "fillOpacity": 20,
                        "gradientMode": "scheme",
                        "lineInterpolation": "smooth",
                        "lineWidth": 2,
                        "pointSize": 5,
                        "showPoints": "auto",
                        "spanNulls": false
                    },
                    "unit": "currencyUSD",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 5
                            },
                            {
                                "color": "red",
                                "value": 10
                            }
                        ]
                    }
                }
            },
            "options": {
                "legend": {
                    "calcs": [
                        "mean",
