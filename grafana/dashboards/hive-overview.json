        ],
        "time_options": [
            "1h",
            "6h",
            "24h",
            "7d",
            "30d"
        ]
    },
    "timezone": "browser",
    "title": "HIVE-R Operations",
    "uid": "hive-r-overview",
    "version": 1,
    "panels": [
        {
            "id": 1,
            "title": "Request Rate",
            "description": "HTTP requests per second by endpoint",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "axisBorderShow": false,
                        "axisCenteredZero": false,
                        "axisLabel": "req/s",
                        "drawStyle": "line",
                        "fillOpacity": 15,
                        "gradientMode": "opacity",
                        "lineInterpolation": "smooth",
                        "lineWidth": 2,
                        "pointSize": 5,
                        "showPoints": "auto",
                        "spanNulls": false,
                        "stacking": {
                            "mode": "none"
                        }
                    },
                    "unit": "reqps"
                }
            },
            "options": {
                "legend": {
                    "calcs": [
                        "mean",
                        "max"
                    ],
                    "displayMode": "table",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "multi",
                    "sort": "desc"
                }
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_http_requests_total{path=~\"$path\"}[$__rate_interval])) by (method, path)",
                    "legendFormat": "{{method}} {{path}}",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 2,
            "title": "Response Latency",
            "description": "p50 / p95 / p99 latency in seconds",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "axisBorderShow": false,
                        "axisLabel": "seconds",
                        "drawStyle": "line",
                        "fillOpacity": 8,
                        "gradientMode": "opacity",
                        "lineInterpolation": "smooth",
                        "lineWidth": 2,
                        "pointSize": 5,
                        "showPoints": "auto",
                        "spanNulls": false,
                        "stacking": {
                            "mode": "none"
                        }
                    },
                    "unit": "s",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 1
                            },
                            {
                                "color": "red",
                                "value": 5
                            }
                        ]
                    }
                },
                "overrides": [
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "p99"
                        },
                        "properties": [
                            {
                                "id": "custom.lineStyle",
                                "value": {
                                    "fill": "dash",
                                    "dash": [
                                        10,
                                        5
                                    ]
                                }
                            }
                        ]
                    },
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "p50"
                        },
                        "properties": [
                            {
                                "id": "custom.lineWidth",
                                "value": 3
                            }
                        ]
                    }
                ]
            },
            "options": {
                "legend": {
                    "calcs": [
                        "lastNotNull"
                    ],
                    "displayMode": "table",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "multi",
                    "sort": "desc"
                }
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.50, sum(rate(hive_http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
                    "legendFormat": "p50",
                    "refId": "A"
                },
                {
                    "expr": "histogram_quantile(0.95, sum(rate(hive_http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
                    "legendFormat": "p95",
                    "refId": "B"
                },
                {
                    "expr": "histogram_quantile(0.99, sum(rate(hive_http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
                    "legendFormat": "p99",
                    "refId": "C"
                }
            ]
        },
        {
            "id": 3,
            "title": "Error Rate",
            "description": "Percentage of requests returning 5xx status",
            "type": "gauge",
            "gridPos": {
                "h": 8,
                "w": 4,
                "x": 16,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "#EAB839",
                                "value": 1
                            },
                            {
                                "color": "orange",
                                "value": 3
                            },
                            {
                                "color": "red",
                                "value": 5
                            }
                        ]
                    },
                    "mappings": [
                        {
                            "type": "special",
                            "options": {
                                "match": "nan",
                                "result": {
                                    "text": "0%",
                                    "color": "green"
                                }
                            }
                        }
                    ]
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                },
                "showThresholdLabels": false,
                "showThresholdMarkers": true,
                "orientation": "auto"
            },
            "targets": [
                {
                    "expr": "(sum(rate(hive_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(hive_http_requests_total[5m]))) * 100",
                    "legendFormat": "Error %",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 4,
            "title": "Circuit Breaker Status",
            "description": "LLM provider circuit breaker state per model",
            "type": "stat",
            "gridPos": {
                "h": 8,
                "w": 4,
                "x": 20,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "mappings": [
                        {
                            "type": "value",
                            "options": {
                                "0": {
                                    "text": "CLOSED ✓",
                                    "color": "green",
                                    "index": 0
                                }
                            }
                        },
                        {
                            "type": "value",
                            "options": {
                                "0.5": {
                                    "text": "HALF OPEN ⚠",
                                    "color": "yellow",
                                    "index": 1
                                }
                            }
                        },
                        {
                            "type": "value",
                            "options": {
                                "1": {
                                    "text": "OPEN ✗",
                                    "color": "red",
                                    "index": 2
                                }
                            }
                        }
                    ],
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 0.5
                            },
                            {
                                "color": "red",
                                "value": 1
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                },
                "colorMode": "background",
                "graphMode": "none",
                "justifyMode": "center",
                "textMode": "auto",
                "orientation": "vertical"
            },
            "targets": [
                {
                    "expr": "hive_circuit_breaker_state",
                    "legendFormat": "{{model}}",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 5,
            "title": "Agent Invocations",
            "description": "Agent invocation rate, filterable by $agent variable",
            "type": "barchart",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "unit": "short",
                    "custom": {
                        "axisBorderShow": false,
                        "fillOpacity": 80,
                        "gradientMode": "hue"
                    }
                }
            },
            "options": {
                "legend": {
                    "displayMode": "list",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "multi"
                },
                "orientation": "horizontal",
                "barWidth": 0.7,
                "groupWidth": 0.75,
                "showValue": "auto",
                "stacking": "none",
                "xTickLabelRotation": 0
            },
            "targets": [
                {
                    "expr": "sum(increase(hive_agent_invocations_total{agent=~\"$agent\"}[$__range])) by (agent)",
                    "legendFormat": "{{agent}}",
                    "refId": "A",
                    "instant": true
                }
            ],
            "transformations": [
                {
                    "id": "sortBy",
                    "options": {
                        "sort": [
                            {
                                "field": "Value",
                                "desc": true
                            }
                        ]
                    }
                }
            ]
        },
        {
            "id": 6,
            "title": "Token Usage by Model",
            "description": "Input & output tokens over time, stacked by model",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 8
            },
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "axisBorderShow": false,
                        "axisLabel": "tokens/s",
                        "drawStyle": "line",
                        "fillOpacity": 30,
                        "gradientMode": "opacity",
                        "lineInterpolation": "smooth",
                        "lineWidth": 1,
                        "pointSize": 5,
                        "showPoints": "never",
                        "spanNulls": false,
                        "stacking": {
                            "mode": "normal",
                            "group": "A"
                        }
                    },
                    "unit": "short"
                }
            },
            "options": {
                "legend": {
                    "calcs": [
                        "sum"
                    ],
                    "displayMode": "table",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "multi",
                    "sort": "desc"
                }
            },
            "targets": [
                {
                    "expr": "sum(rate(hive_token_usage_total{model=~\"$model\"}[$__rate_interval])) by (model, direction)",
                    "legendFormat": "{{model}} ({{direction}})",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 7,
            "title": "Cost Burn Rate",
